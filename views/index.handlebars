<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row col-md-10 col-12 mx-auto">
    <div class="row row-cols-1 row-cols-md-3" id="data-panel">
      {{#each restaurants}}
      <div class="col mb-4">
        <a href="/restaurant/{{ this._id }}" class=" text-decoration-none text-secondary">
          <div class="card mb-2">
            <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            <div class="card-body restaurant-item-body">
              <h6 class="card-title mb-2">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils mb-2"></i>{{this.category}}
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge rounded-pill bg-danger rating">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <span>
                  <a href="/restaurant/{{this._id}}/edit" class="btn btn-warning btn-sm">編輯/刪除</a>
                </span>
              </div>

            </div>
         </div>
        </a>
      </div>
      {{/each}}
      {{!-- add-new-card --}}

      <div class="col mb-4">
        <a href="/news" class=" text-decoration-none text-secondary">
          <div class="card" id="add-new-restaurant">
            <div class="card-body restaurant-item-body d-flex justify-content-center align-items-center">
              <h6 class="card-title my-auto fs-2">現在添加新餐廳</h6>
            </div>
         </div>
        </a>
     </div>
    </div>
  </div>
</div>