<div class="row">
  <div class="col-12 col-lg-10 col-xl-8 mx-auto line">
    <div class="card">
      <div class="card-body my-3 ">
        
        <h2 class="card-title text-center mb-5">新增餐廳資料</h5>
        <form action="/news/update" method="POST">

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖名稱</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="店面名稱" name="name">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖英文名稱</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="店面英文名稱" name="name_en">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">餐點類別</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="類別" name="category">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖照片</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="照片網址" name="image">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖地址</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="餐廳地址" name="location">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖電話</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="餐廳電話" name="phone">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖地圖</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="餐廳地圖" name="google_map">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖評分</label>
            <div class="col-md-10">
              <input type="text" class="form-control" placeholder="餐廳評分" name="rating">
            </div>
          </div>

          <div class="row my-4">
            <label for="numbers" class="col-md-2 col-form-label text-center">店舖評論</label>
            <div class="col-md-10">
              <textarea style="height:150px;"class="form-control" placeholder="餐廳詳述" name="description"></textarea>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button class="btn btn-primary  mx-2" type="submit">儲存</button>
            <a href="/" class="btn btn-light mx-2" role="button">放棄新增</a>
          </div>

        </form>

      </div>        
    </div>
  </div>
</div>
