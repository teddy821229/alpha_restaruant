<h1 class="mb-1 restaurant-show-title">{{restaurant.name}} </h1>
<h3 class="restaurant-show-title-eng">{{restaurant.name_en}} </h3>
<div class="container mb-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}} " class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-5 w-100" src="{{restaurant.image}} " alt="{{restaurant.name}}" style="max-width: 600px;">
      <div class="d-flex justify-content-end mt-5">
        <a href="/restaurant/{{restaurant._id}}/edit" class="btn btn-warning mx-3">編輯/刪除</a>
        <a href="/" class="btn btn-light mx-3">回到首頁</a>
      </div>

    </div>
  </div>
</div>